<p id="notice"><%= notice %></p>

<h1>Pqrs</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Description</th>
      <th>Creation date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pqrs.each do |pqr| %>
      <tr>
        <td><%= pqr.first_name %></td>
        <td><%= pqr.last_name %></td>
        <td><%= pqr.email %></td>
        <td><%= pqr.phone %></td>
        <td><%= pqr.description %></td>
        <td><%= pqr.creation_date %></td>
        <td><%= link_to 'Show', pqr %></td>
        <td><%= link_to 'Edit', edit_pqr_path(pqr) %></td>
        <td><%= link_to 'Destroy', pqr, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

