<div  class="container">
    <p id="notice"><%= notice %></p>
    
    <h1>Pqrs</h1>
    
    <table class="responsive-table">
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Description</th>
          <th>Creation date</th>
          <th>State ID</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @pqrs.each do |pqr| %>
          <tr>
            <td><%= pqr.first_name %></td>
            <td><%= pqr.last_name %></td>
            <td><%= pqr.email %></td>
            <td><%= pqr.phone %></td>
            <td><%= pqr.description %></td>
            <td><%= pqr.creation_date %></td>
            <td><%= pqr.state_id %></td>
            <td class="waves-effect waves-light btn"><%= link_to 'Show', pqr %></td>
            <td class="waves-effect waves-light btn"><%= link_to 'Edit', edit_pqr_path(pqr) %></td>
            <td class="waves-effect waves-light btn"><%= link_to 'Destroy', pqr, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    
    <br>
    
    <%= link_to 'New Pqr', new_pqr_path %>

</div>